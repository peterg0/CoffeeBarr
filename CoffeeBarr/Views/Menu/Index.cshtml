@model List<IList<object>>

@{
    ViewData["Title"] = "Menu";
}

<body>
    <div class="text-light">
    <h1>Menu</h1>
    
    <table class="table table-striped table-dark">
        <tr>
            <th>Category</th>
            <th>Item Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Small</th>
            <th>Medium</th>
            <th>Large</th>
        </tr>

        @foreach (var row in Model.Skip(1))
        {
            <tr class="">
                @foreach (var cell in row)
                {
                    <td>@cell</td>
                }
            </tr>
        }
    </table>


    </div>
</body>
